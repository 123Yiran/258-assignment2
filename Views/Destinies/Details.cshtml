@model assignment2.Models.Destiny

@{
    ViewBag.Title = "Details";
}
<style>
    .background-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background-image: url('/Image/Destinydround2.png');
        background-size: cover;
        background-position: center;
        z-index: -1;
        opacity: 0.8;
        pointer-events: none;
        filter: blur(2px);
        mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
    }
    .showTable {
        height: 40vh;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        margin-top: 150px;
        margin-right: 25%;
        margin-left: 25%;
        margin-bottom: 35%;
        box-shadow: 0 0 2px gold;
        border-radius: 0 30px 0 20px;
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 15px; /* 调整内边距，增加排版的美观性 */
    }

        /* 给 <div> 内容区域添加内边距 */
        .showTable > div {
            padding: 5px; /* 调整内边距，增加排版的美观性 */
        }

        /* 给 <p> 区域添加内边距 */
        .showTable p {
            padding: 10px 2px; /* 调整上下内边距，增加排版的美观性 */
        }
    .showTable h4{
        
        font-size:25px;
    }
</style>
<div class="background-image"></div>
<h2>Details</h2>
<div class="showTable">
    <div>
        <h4>Destiny</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>